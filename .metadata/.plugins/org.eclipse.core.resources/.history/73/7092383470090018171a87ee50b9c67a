package LinkedList;

class OCNode{
	
	int data;
	OCNode next;
	
	OCNode(int x){
		this.data=x;
		this.next=null;
	}
}

class OCList{
	
	OCNode head;
	
	OCList(){
		this.head=null;
	}
	
	public void push(int x) {
		
		OCNode temp = new OCNode(x);
		temp.next=head;
		head=temp;
	}
	
	public void display(OCNode head2) {
		
		while(head2!=null) {
			System.out.print(head2.data);
			head2 = head2.next;
		}
	}
	
	public void groupOddEvenNodes() {
		
		OCNode oddNode= this.head;
		OCNode evenNode = this.head.next;
		
		while(oddNode!=null&&evenNode!=null&&evenNode.next!=null) {
			
			oddNode.next=evenNode.next;
			 
		}
		
		
		
	}
}
public class OddEvenLinkedList {

	public static void main(String[] args) {
	 OCList l = new OCList();
	 l.head=new OCNode(1);
	 l.head.next=new OCNode(2);
	 l.head.next.next=new OCNode(3);
	 l.display(l.head);
	 l.groupOddEvenNodes();
	 l.display(l.head);
	 
	 
	 
}
}
