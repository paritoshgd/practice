}

private static class EvenGenerator implements Runnable{
	
	public void run() {
		
		int oldNum =0;
		
		while(true) {
			
			try {
				Thread.sleep(Long.MAX_VALUE);
			}catch(InterruptedException e) {
				
			}
			
			int num=counter;
			if(num!=oldNum && num%2==0) {
				
			}
			
		}
		
		
}

 
